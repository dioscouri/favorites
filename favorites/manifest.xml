    <description>A User Favorites Manager for Joomla</description>

	<!-- Application/site -->    
	<files folder="site">
		<file>favorites.php</file>
		<file>controller.php</file>
		<file>index.html</file>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<languages folder="languages/site">
		<language tag="en-GB">en-GB.com_favorites.ini</language>
	</languages>
	
	<!-- Application/administrator -->
	<administration>
		<menu img="../media/com_favorites/images/favorites_16.png">COM_FAVORITES</menu>

		<files folder="admin">
            <file>defines.php</file>
			<file>favorites.php</file>
			<file>controller.php</file>
			<file>index.html</file>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>install</folder>
			<folder>library</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>

		<languages folder="languages/admin">
			<language tag="en-GB">en-GB.com_favorites.ini</language>
            <language tag="en-GB">en-GB.com_favorites.sys.ini</language>
            <language tag="en-GB">en-GB.com_favorites.menu.ini</language>
		</languages>
	</administration>
	
	<!-- Installation -->
	<install>
		<sql>
            <file>install.sql</file>
		</sql>
	</install>

	<installfile>install.php</installfile>
	<uninstallfile>uninstall.php</uninstallfile>

	<!--  Media -->
	<media destination="com_favorites" folder="media">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
        <folder>menus</folder>
	</media>
		
	<!-- Modules -->	
	<modules>
